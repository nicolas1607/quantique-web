    <div>
        <h2>Clients</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Email</th>
                    <th scope="col">Numéro de téléphone</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in company.users %}
                <tr class="table-light">
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }} {{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phone }}</td>
                    <td>
                        <ul class="action-list">
                            <li class="action-item">
                                <a href="{{path('edit_user', {'id': user.id})}}" class="action-link">
                                    <i class="fas fa-user-edit"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div>
        <h2>Sites internet</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom du site</th>
                    <th scope="col">URL du site</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for website in company.websites %}
                <tr class="table-light">
                    <td>{{website.id}}</td>
                    <td>{{website.name}}</td>
                    <td><a class="nav-link" href="{{website.url}}">{{website.url}}</a></td>
                    <td>
                        <ul class="action-list">
                            <li class="action-item">
                                <a href="{{path('show_website', {'website': website.id})}}" class="action-link">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </li>
                            <li class="action-item">
                                <a href="{{path('edit_website', {'website': website.id})}}" class="action-link">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
    const googleAccount = document.querySelector('#GoogleAccount');
    const facebookAccount = document.querySelector('#FacebookAccount');

    const buttonGoogle = document.querySelector('#newGoogleAccount');
    buttonGoogle.addEventListener('click', () => {
        googleAccount.style.display = 'block';
        document.querySelector('.form-google-account').style.display = 'none';
    });

    const buttonFacebook = document.querySelector('#newFacebookAccount');
    buttonFacebook.addEventListener('click', () => {
        facebookAccount.style.display = 'block';
        document.querySelector('.form-facebook-account').style.display = 'none';
    });
</script>

