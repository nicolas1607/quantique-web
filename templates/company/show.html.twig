{% extends 'base.html.twig' %}

{% block title %}Quantique | Ajouter une entreprise{% endblock %}

{% block body %}

<div class="container">


    <div class="cont-grid">
        <div class="">
            <div class="cont-flex-start">
                <i class="fas fa-building fa-2x"></i>
                <h2>{{company.name}}</h2>
            </div>
            <p><strong>Email</strong> : {{company.email}}</p>
            <p><strong>Téléphone</strong> : {{company.phone}}</p>
            <p><strong>Adresse : </strong>{{company.address}}, {{company.city}} {{company.postalCode}}</p>
            <p><strong>Numéro TVA : </strong>{{company.numTVA}}</p>
            <p><strong>SIRET ou SIREN : </strong>{{company.siret}}</p>
            {# <p><strong>Nombre de site internet : </strong>{{company.websites|length}}</p>
            <p><strong>Nombre de contrats : </strong>{{nbContract}}</p> #}
        </div>
        <div class="">
            <div class="cont-flex-space">
                <div class="cont-flex-start">
                    <i class="fas fa-users fa-2x"></i>
                    <h2>Clients</h2>
                </div>
                <a class="nav-link" href="{{path('add_user_company', {'company': company.id})}}">
                    <i class="fas fa-plus-square fa-2x"></i>
                </a>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Contact</th>
                        {# <th scope="col">Email</th>
                        <th scope="col">Numéro de téléphone</th> #}
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in company.users %}
                    <tr class="table-light">
                        <td>{{ user.firstname }} {{ user.lastname }}</td>
                        {# <td>{{ user.email }}</td>
                        <td>{{ user.phone }}</td> #}
                        <td>
                            <ul class="action-list">
                                <li class="action-item">
                                    <a href="{{path('edit_user', {'id': user.id})}}" class="action-link">
                                        <i class="fas fa-user-edit"></i>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="section">
        <div class="cont-flex-space">
            <div class="cont-flex-start">
                <i class="fas fa-globe-americas fa-2x"></i>
                <h2>Sites internet</h2>
            </div>
            <a class="nav-link" href="{{path('add_website', {'company': company.id})}}">
                <i class="fas fa-plus-square fa-2x"></i>
            </a>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nom du site</th>
                    <th scope="col">URL du site</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for website in company.websites %}
                <tr class="table-light">
                    <td>{{website.name}}</td>
                    <td><a class="nav-link" href="{{website.url}}">{{website.url}}</a></td>
                    <td>
                        <ul class="action-list">
                            <li class="action-item">
                                <a href="{{path('show_website', {'website': website.id})}}" class="action-link">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </li>
                            <li class="action-item">
                                <a href="{{path('edit_website', {'website': website.id})}}" class="action-link">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="cont-grid section">
        <div class="form-facebook">
            <div class="cont-flex">
                <i class="fab fa-facebook-square fa-3x"></i>
                <h2>Compte Facebook</h2>
            </div>
            <form class="form-account" method="GET">
                <label for="emailFb">Email</label>
                <input class="form-control" type="text" name="emailFb">
                <label for="mdpFb">Mot de passe</label>
                <input class="form-control" type="password" name="mdpFb">
                <button class="btn-type btn-login" type="submit">Envoyer</button>
            </form>
        </div>
        <div class="form-google">
            <div class="cont-flex">
                <i class="fab fa-google-plus-square fa-3x"></i>
                <h2>Compte Google</h2>
            </div>
            <form class="form-account" method="GET">
                <label for="emailGoogle">Email</label>
                <input class="form-control" type="text" name="emailGoogle">
                <label for="mdpGoogle">Mot de passe</label>
                <input class="form-control" type="password" name="mdpGoogle">
                <button class="btn-type btn-login" type="submit">Envoyer</button>
            </form>
        </div>
        
    </div>
</div>

{% endblock %}