{% extends 'base.html.twig' %}

{% block title %}Quantique | Ajouter une entreprise{% endblock %}

{% block body %}

<div class="container">

    <div class="cont-flex-space">
        <h1>{{company.name}}</h1>
        <div class="cont-flex-space">
            <a class="nav-link" href="{{path('add_user_company', {'company': company.id})}}">Nouveau client</a>
            <a class="nav-link" href="{{path('add_website', {'company': company.id})}}">Nouveau site</a>
        </div>
    </div>

    <div>
        <div>
            <div class="cont-grid">
                <p><strong>Email</strong> : {{company.email}}</p>
                <p><strong>Téléphone</strong> : {{company.phone}}</p>
            </div>
            <div class="cont-grid">
                <p><strong>Adresse : </strong>{{company.address}}</p>
                <p><strong>Complément d'adresse : </strong>{{company.city}} {{company.postalCode}}</p>
            </div>
            <div class="cont-grid">
                <p><strong>Numéro TVA : </strong>{{company.numTVA}}</p>
                <p><strong>SIRET ou SIREN : </strong>{{company.siret}}</p>
            </div>
            <div class="cont-grid">
                <p><strong>Nombre de site internet : </strong>{{company.websites|length}}</p>
                <p><strong>Nombre de contrats : </strong>{{nbContract}}</p>
            </div>
        </div>
    </div>

