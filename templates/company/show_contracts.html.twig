{% extends 'base.html.twig' %}

{% block title %}Quantique | Ajouter une entreprise{% endblock %}

{% block body %}

<!-- MODAL NOTEPAD -->
{% include "partials/_modal_notepad.html.twig" %}
<!-- MODAL DELETE USER -->
{% include "partials/_modal_delete_user.html.twig" %}
<!-- MODAL DELETE WEBSITE -->
{% include "partials/_modal_delete_website.html.twig" %}
<!-- MODAL DELETE CONTRACT -->
{% include "partials/_modal_delete_contract.html.twig" %}

<body>

    <div class="container">
        {% include "partials/_company_info.html.twig" %}

        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn-type right btn10" href="{{path('add_website_with_company', {'company': company.id})}}">Nouvel
            abonnement</a>
        {% endif %}

        <ul class="nav nav-tabs nav-tabs-company">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab"
                    href="{{path('show_contracts', {'company': company.id})}}">Abonnements</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab"
                    href="{{path('show_invoices', {'company': company.id})}}">Factures</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab"
                    href="{{path('show_stats', {'company': company.id})}}">Statistiques</a>
            </li>
        </ul>

        <div class="contracts">
            {% for website in company.websites %}
            <div class="contract">
                <div class="contract-header">
                    <div class="cont-flex-space">
                        <div class="cont-flex">
                            <h3 class="contract-title"><a class="action-link"
                                    href="{{website.url}}">{{website.name}}</a>
                            </h3>
                        </div>
                        {% if is_granted('ROLE_ADMIN') and website.id %}
                        <div class="cont-flex">
                            <a class="nav-link" href="{{path('add_contract_website', {'website': website.id})}}"
                                title="Ajouter un abonnement">
                                <i class="fas fa-plus-square fa-lg"></i>
                            </a>
                            <a class="nav-link" href="{{path('edit_website', {'website': website.id})}}"
                                title="Modifier le site internet">
                                <i class="fas fa-edit fa-lg"></i>
                            </a>
                            <a id="delete-website{{website.id}}" class="nav-link delete-website"
                                title="Supprimer le site internet">
                                <i class="fas fa-times fa-lg"></i>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
                <div class="contract-notes">
                    {% for contract in website.contracts %}
                    <div class="cont-flex-space contract-item contract-content">
                        <div id="contract{{contract.id}}" class="cont-flex-start contract-info">
                            <h3 class="cont-flex-start contract-title">{{contract.type.name}}</h3>
                            <div class="cont-flex-space">
                                <p>
                                    <i class="fas fa-chevron-right"></i>
                                    {% if contract.promotion %}
                                    <strike>{{contract.price}}€ / mois</strike> =>
                                    <mark>{{contract.promotion}}€ / mois</mark>
                                    {% else %}
                                    <mark>{{contract.price}}€ / mois</mark>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                        {% if is_granted('ROLE_ADMIN') %}
                        <div class="cont-flex contract-action">
                            <a class="nav-link" href="{{path('edit_contract', {'contract': contract.id})}}"
                                title="Modifier l'abonnement">
                                <i class="fas fa-edit fa-lg"></i>
                            </a>
                            <a id="delete-contract{{contract.id}}" class="nav-link delete-contract"
                                title="Supprimer l'abonnement">
                                <i class="fas fa-times fa-lg"></i>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <script>

        // function modal notes pour chaque contrat
        const cont = document.querySelector('.container');
        const navbar = document.querySelector('.navbar');
        const buttons = document.querySelectorAll('.container a, .navbar a, .contract-item');
        const noteLinks = document.getElementsByClassName('contract-info');

        if (document.querySelector('.notepad')) {
            for (let i = 0; i < noteLinks.length; i++) {
                const noteLink = noteLinks[i];
                const id = noteLink.id.substr(8);
                const notepad = document.querySelector('#notepad' + id)
                const close = document.querySelector('#notepad-close' + id);
                // afficher la modal
                noteLink.addEventListener('click', () => {
                    if (notepad.style.visibility = 'hidden') {
                        notepad.style.visibility = 'visible';
                        navbar.style.opacity = 0.4;
                        cont.style.opacity = 0.4;
                        buttons.forEach(function (btn) {
                            btn.style.pointerEvents = 'none';
                        });
                    }
                });
                // fermer la modal 'X'
                if (close) {
                    close.addEventListener('click', () => {
                        if (notepad.style.visibility = 'visible') {
                            notepad.style.visibility = 'hidden';
                            navbar.style.opacity = 1;
                            cont.style.opacity = 1;
                            buttons.forEach(function (btn) {
                                btn.style.pointerEvents = 'auto';
                            });
                        }
                    });
                }

            };
        }

        // fermer la modal 'Escape'
        const notepads = document.getElementsByClassName('notepad');
        window.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                for (let i = 0; i < notepads.length; i++) {
                    if (notepads[i].style.visibility = 'visible') {
                        notepads[i].style.visibility = 'hidden';
                        navbar.style.opacity = 1;
                        cont.style.opacity = 1;
                        buttons.forEach(function (btn) {
                            btn.style.pointerEvents = 'auto';
                        });
                    }
                }
            }
        });

        // function delete un website / contract / user
        const typeDelete = ['website', 'contract', 'user'];
        typeDelete.forEach(function (type) {
            let deletes = document.querySelectorAll('.delete-' + type);
            for (let i = 0; i < deletes.length; i++) {
                let id;
                let del = deletes[i];
                if (type == 'website') id = del.id.substr(14);
                else if (type == 'contract') id = del.id.substr(15);
                else if (type == 'user') id = del.id.substr(11);
                let modal = document.querySelector('#modal-' + type + id);
                del.addEventListener('click', () => {
                    modal.style.visibility = 'visible';
                    navbar.style.opacity = 0.4;
                    cont.style.opacity = 0.4;
                    buttons.forEach(function (btn) {
                        btn.style.pointerEvents = 'none';
                    });
                });
            }
        });
        // function fermer une modale
        const modalElements = document.querySelectorAll('.mdl-delete');
        modalElements.forEach(function (modal) {
            const close = modal.querySelector('.mdl-close');
            const cancel = modal.querySelector('.btn-cancel');
            // fermer avec button 'X'
            close.addEventListener('click', () => {
                modal.style.visibility = 'hidden';
                navbar.style.opacity = 1;
                cont.style.opacity = 1;
                buttons.forEach(function (btn) {
                    btn.style.pointerEvents = 'auto';
                });
            });
            // fermer avec button 'Annuler'
            cancel.addEventListener('click', () => {
                modal.style.visibility = 'hidden';
                navbar.style.opacity = 1;
                cont.style.opacity = 1;
                buttons.forEach(function (btn) {
                    btn.style.pointerEvents = 'auto';
                });
            });
            // fermer avec button 'Escape'
            window.addEventListener('keydown', function (event) {
                if (event.key === 'Escape') {
                    modal.style.visibility = 'hidden';
                    navbar.style.opacity = 1;
                    cont.style.opacity = 1;
                    buttons.forEach(function (btn) {
                        btn.style.pointerEvents = 'auto';
                    });
                }
            });
        });


    </script>

</body>


{% endblock %}