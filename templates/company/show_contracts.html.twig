{% extends 'base.html.twig' %}

{% block title %}Quantique | Ajouter une entreprise{% endblock %}

{% block body %}

<div class="container">
    {% include "partials/_company_info.html.twig" %}

    <a class="btn-type right" href="{{path('add_website_with_company', {'company': company.id})}}">Nouvel abonnement</a>

    <ul class="nav nav-tabs nav-tabs-company">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="{{path('show_contracts', {'company': company.id})}}">Abonnements</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{path('show_invoices', {'company': company.id})}}">Factures</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{path('show_accounts', {'company': company.id})}}">Comptes</a>
        </li>
    </ul>

    <div>
        {% for website in company.websites %}
        <div class="contract">
            <div class="contract-header">
                <div class="cont-flex-space">
                    <div class="cont-flex">
                        <h3 class="contract-title"><a class="action-link" href="{{website.url}}">{{website.name}}</a></h3>
                    </div>
                    <div class="cont-flex">
                        <a href="{{path('edit_website', {'website': website.id})}}" class="action-link">
                            <i class="fas fa-edit fa-lg"></i>
                        </a>
                        <a class="nav-link" href="{{path('add_contract_with_website', {'website': website.id})}}">
                            <i class="fas fa-plus-square fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="contract-content">
                {% for contract in website.contracts %}
                <div class="cont-flex-space">
                    <div class="cont-flex contract-info">
                        <h3 class="cont-flex-start contract-title">{{contract.type.name}}</h3>
                        <div class="cont-flex-space">
                            <p>
                                <i class="fas fa-chevron-right"></i> 
                                {% if contract.promotion == 0 %}
                                <mark>{{contract.price}}€ / mois</mark>
                                {% else %}
                                <strike>{{contract.price}}€ / mois</strike> => 
                                <mark>{{contract.price - contract.promotion}}€ / mois</mark>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="cont-flex-end">
                        <a class="action-link" href="{{path('edit_contract', {'contract': contract.id})}}">
                            <i class="fas fa-edit fa-lg"></i>
                        </a>
                        <a class="action-link" href="{{path('delete_contract', {'contract': contract.id})}}">
                            <i class="fas fa-times fa-lg"></i>
                        </a>
                    </div>
                </div>
                {% endfor %} 
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}