{% extends 'base.html.twig' %}

{% block title %}Quantique | Ajouter une entreprise{% endblock %}

{% block body %}

<div class="container">
    <div class="cont-grid">
        <div>
            <div class="cont-flex-start">
                <i class="fas fa-building fa-2x"></i>
                <h2>{{company.name}}</h2>
            </div>
            <div class="cont-grid">
                <p><strong>Numéro TVA : </strong></br>{{company.numTVA}}</p>
                <p><strong>SIRET ou SIREN : </strong></br>{{company.siret}}</p>
            </div>
            <div class="cont-grid">
                <p><strong>Email : </strong></br>{{company.email}}</p>
                <p><strong>Téléphone : </strong></br>{{company.phone}}</p>
            </div>
            <p><strong>Adresse : </strong></br>{{company.address}}, {{company.city}} {{company.postalCode}}</p>
        </div>
        <div>
            <div class="cont-flex-space">
                <div class="cont-flex-start">
                    <i class="fas fa-users fa-2x"></i>
                    <h2>Clients</h2>
                </div>
                <a class="nav-link" href="{{path('add_user_with_company', {'company': company.id})}}">
                    <i class="fas fa-plus-square fa-2x"></i>
                </a>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Contact</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in company.users %}
                    <tr class="table-light">
                        <td>{{ user.firstname }} {{ user.lastname }}</td>
                        <td>
                            <ul class="action-list">
                                <li class="action-item">
                                    <a href="{{path('edit_user', {'user': user.id})}}" class="action-link">
                                        <i class="fas fa-user-edit"></i>
                                    </a>
                                </li>
                                <li class="action-item">
                                    <a href="{{path('delete_user', {'user': user.id})}}" class="action-link">
                                        <i class="fas fa-times"></i>                                   
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <a class="btn-type right" href="{{path('add_website_with_company', {'company': company.id})}}">Nouvel abonnement</a>

    <ul class="nav nav-tabs nav-tabs-company">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="{{path('show_contracts', {'company': company.id})}}">Abonnements</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{path('show_invoices', {'company': company.id})}}">Factures</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{path('show_accounts', {'company': company.id})}}">Comptes</a>
        </li>
    </ul>

    <div>
        {# <div class="cont-flex-space">
            <div class="cont-flex-start">
                <i class="fas fa-globe-americas fa-2x"></i>
                <h2>Abonnements</h2>
            </div>
            <a class="nav-link" href="{{path('add_website_with_company', {'company': company.id})}}">
                <i class="fas fa-plus-square fa-2x"></i>
            </a>
        </div> #}
        {% for website in company.websites %}
        <div class="contract">
            <div class="contract-header">
                <div class="cont-flex-space">
                    <div class="cont-flex">
                        <h3 class="contract-title"><a class="action-link" href="{{website.url}}">{{website.name}}</a></h3>
                    </div>
                    <div class="cont-flex">
                        <a href="{{path('edit_website', {'website': website.id})}}" class="action-link">
                            <i class="fas fa-edit fa-lg"></i>
                        </a>
                        <a class="nav-link" href="{{path('add_contract_with_website', {'website': website.id})}}">
                            <i class="fas fa-plus-square fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="contract-content">
                {% for contract in website.contracts %}
                <div class="cont-flex-space">
                    <div class="cont-flex contract-info">
                        <h3 class="cont-flex-start contract-title">{{contract.type.name}}</h3>
                        <div class="cont-flex-space">
                            <p>
                                <i class="fas fa-chevron-right"></i> 
                                {% if contract.promotion == 0 %}
                                <mark>{{contract.price}}€ / mois</mark>
                                {% else %}
                                <strike>{{contract.price}}€ / mois</strike> => 
                                <mark>{{contract.price - contract.promotion}}€ / mois</mark>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="cont-flex-end">
                        <a class="action-link" href="{{path('edit_contract', {'contract': contract.id})}}">
                            <i class="fas fa-edit fa-lg"></i>
                        </a>
                        <a class="action-link" href="{{path('delete_contract', {'contract': contract.id})}}">
                            <i class="fas fa-times fa-lg"></i>
                        </a>
                    </div>
                </div>
                {% endfor %} 
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}