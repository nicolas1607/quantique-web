{% extends 'base.html.twig' %}

{% block title %}Quantique | Modifier mon mot de passe{% endblock %}

{% block body %}
<div class="container">
    <h1 class="form-title">Modifier mon mot de passe</h1>
    {{ form_start(edit_user_form) }}
    <div class="form-section">
        <label for="company">Identifiant</label>
        <div class="input">
            <input class="form-control" type="text" value="{{user.email}}" readonly>
            <span class="bottom"></span>
            <span class="right"></span>
            <span class="top"></span>
            <span class="left"></span>
        </div>
    </div>
    <div class="form-section cont-grid">
        {{ form_row(edit_user_form.password) }}
    </div>
    <div class="cont-flex">
        <button class="btn-type btn-form">Modifier</button>
    </div>
    {{ form_end(edit_user_form) }}
</div>
{% endblock %}