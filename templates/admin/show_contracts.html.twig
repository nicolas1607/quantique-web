{% extends 'base.html.twig' %}

{% block title %}Modifier le client{% endblock %}

{% block body %}

<div class="container">
    <h2>Client {{ user.email }}</h2>
    <a class="btn-type right btn10" href="{{ path('add_contract', {'user': user.id}) }}">Nouveau contrat</a>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab"
                href="{{path('show_stats_user', {'id': user.id})}}">Statistiques</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab"
                href="{{path('show_contracts_user', {'id': user.id})}}">Contrats</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{path('show_invoices_user', {'id': user.id})}}">Factures</a>
        </li>
    </ul>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom du contrat</th>
                <th scope="col">Type de contrat</th>
                <th scope="col">Prix en €/mois</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for contract in user.contracts %}
            <tr class="table-light">
                <td>{{ contract.id }}</td>
                <td>{{ contract.name }}</td>
                <td>{{ contract.type.name }}</td>
                <td>{{ contract.price }}€ / mois</td>
                <td>
                    <ul class="action-list">
                        <li class="action-item">
                            <a href="" class="action-link">Voir</a>
                            <a href="" class="action-link">Télécharger</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}