{% extends 'base.html.twig' %}

{% block title %}Quantique | Clients{% endblock %}

{% block body %}

<div class="container">
    <h1>Espace administration</h1>
    <div class="cont-flex-end">
        <span class="nav-link-header">Ajouter :</span>
        <a class="nav-link" href="{{ path('app_register') }}">Client</a>
        <a class="nav-link" href="{{ path('add_contract') }}">Contrat</a>
        <a class="nav-link" href="{{ path('add_invoice') }}">Facture</a>
    </div>

    <ul class="nav nav-tabs nav-tabs-admin">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="">Les clients</a>
        </li>
    </ul>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Entreprise</th>
                <th scope="col">Email</th>
                <th scope="col">Contact</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr class="table-light">
                <td>{{ user.id }}</td>
                <td>
                    {% for company in user.companies %}
                    {{ company.name }}
                    {% endfor %}
                </td>
                <td>{{ user.email }}</td>
                <td>{{ user.contact }}</td>
                <td>
                    <ul class="action-list">
                        <li class="action-item">
                            <a href="{{path('add_contract_user', {'user': user.id})}}" class="action-link">Contrat</a>
                            <a href="{{path('add_invoice_user', {'user': user.id})}}" class="action-link">Facture</a>
                            <a href="{{path('show_stats_user', {'id': user.id})}}" class="action-link">Voir</a>
                            <a href="{{path('edit_user', {'id': user.id})}}" class="action-link">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}