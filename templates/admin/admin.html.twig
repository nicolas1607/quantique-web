{% extends 'base.html.twig' %}

{% block title %}Quantique | Clients{% endblock %}

{% block body %}

<div class="container">
    <h1>Espace administration</h1>
    <div class="cont-flex-end">
        <span class="nav-link-header">Ajouter :</span>
        <a class="nav-link" href="{{ path('add_user') }}">Client</a>
        <a class="nav-link" href="{{ path('add_company') }}">Entreprise</a>
        <a class="nav-link" href="{{ path('add_invoice') }}">Facture</a>
    </div>

    <ul class="nav nav-tabs nav-tabs-admin">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="{{path('admin')}}">Les entreprises</a>
        </li>
    </ul>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nom de l'entreprise</th>
                <th scope="col">Numéro de téléphone</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for company in companies %}
            <tr class="table-light">
                <td>{{ company.name }}</td>
                <td>{{ company.phone }}</td>
                <td>{{ company.email }}</td>
                <td>
                    <ul class="action-list">
                        <li class="action-item">
                            <a href="{{path('add_user_with_company', {'company': company.id})}}" class="action-link">
                                <i class="fas fa-user-plus fa-lg"></i>
                            </a>
                        </li>
                        <li class="action-item">
                            <a href="{{path('add_invoice_with_company', {'company': company.id})}}" class="action-link">
                                <i class="fas fa-file-upload fa-lg"></i>
                            </a>
                        </li>
                        <li class="action-item">
                            <a href="{{path('show_contracts', {'company': company.id})}}" class="action-link">
                                <i class="fas fa-eye fa-lg"></i>
                            </a>
                        </li>
                        <li class="action-item">
                            <a href="{{path('edit_company', {'company': company.id})}}" class="action-link">
                                <i class="fas fa-edit fa-lg"></i>
                            </a>
                        </li>
                        <li class="action-item">
                            <a href="{{path('delete_company', {'company': company.id})}}" class="action-link">
                                <i class="fas fa-times fa-lg"></i>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}