{% extends 'base.html.twig' %}

{% block title %}Modifier le client{% endblock %}

{% block body %}

<div class="container">
    <h1>Client {{ user.email }}</h1>
    <div class="right">
        <a class="btn-type btn10" href="{{ path('add_contract', {'user': user.id}) }}">Nouveau contrat</a>
    </div>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab"
                href="{{path('show_stats_user', {'id': user.id})}}">Statistiques</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab"
                href="{{path('show_contracts_user', {'id': user.id})}}">Contrats</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{path('show_invoices_user', {'id': user.id})}}">Factures</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab"
                href="{{path('show_companies_user', {'id': user.id})}}">Entreprises</a>
        </li>
    </ul>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom de l'entreprise</th>
                <th scope="col">Adresse</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for company in user.companies %}
            <tr class="table-light">
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.address }}, {{ company.postalCode }} {{ company.city }}</td>
                <td>
                    <ul class="action-list">
                        <li class="action-item">
                            <a href="" class="action-link">
                                <i class="fas fa-lg fa-edit"></i>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}