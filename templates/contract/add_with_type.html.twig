{% extends 'base.html.twig' %}

{% block title %}Quantique | Ajouter un contrat{% endblock %}

{% block body %}

<div class="container">
    <h1 class="form-title">Nouveau contrat</span></h1>
    {{ form_start(add_contract_form) }}
    <div class="cont-grid form-section">
        <div>
            <label for="website">Site internet</label>
            <input class="form-control" type="text" name="website" value="{{website.name}}" readonly>
        </div>
        <div>
            <label for="type">Type du contrat</label>
            <input class="form-control" type="text" name="type" value="{{type.name}}" readonly>
        </div>
    </div>
    <div class="cont-grid form-section">
        {{ form_row(add_contract_form.price) }}
        {{ form_row(add_contract_form.promotion) }}
    </div>
    <div class="cont-flex">
        {{ form_row(add_contract_form.submit) }}
    </div>
    {{ form_end(add_contract_form) }}
</div>

{% endblock %}