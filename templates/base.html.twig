<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Quantique Web Office{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link rel="icon" href="{{asset('images/icons/favicon.png')}}">
    <link rel="stylesheet" href="{{asset('css/bootstrap.min.css')}}">
    <link rel="stylesheet" href="{{asset('css/main.css')}}">
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    {% include "partials/_navbar.html.twig" %}

    {% for message in app.flashes('success') %}
        <div class="alert-success bg-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('alert') %}
        <div class="alert-success bg-danger">
            {{ message }}
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
</body>

</html>

<script src="{{asset('js/jquery-3.6.0.js')}}"></script>

<script>
    setTimeout(() => {
        let modal = document.querySelector('.alert-success');
        if (modal) modal.remove();
    }, 3000)
</script>