{% extends 'base.html.twig' %}

{% block title %}Ajouter une facture{% endblock %}

{% block body %}

<div class="container">
    <h2>Ajouter une facture</h2>

    {{ form_start(add_invoice_form) }}
    <div class="cont-grid form-section">
        {{ form_row(add_invoice_form.num) }}
        {{ form_row(add_invoice_form.releasedAt) }}
    </div>
    <div class="cont-grid form-section">
        {{ form_row(add_invoice_form.file) }}
        {{ form_row(add_invoice_form.contract) }}
    </div>
    {{ form_row(add_invoice_form.submit) }}

    {{ form_end(add_invoice_form) }}
</div>

{% endblock %}